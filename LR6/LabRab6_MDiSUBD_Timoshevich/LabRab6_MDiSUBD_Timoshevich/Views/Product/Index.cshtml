@model IEnumerable<LabRab6_MDiSUBD_Timoshevich.Entities.Product>

<h2>Manage Products</h2>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td>@product.Quantity</td>
            <td>@product.ManufacturerName</td>
            <td>@product.UnitOfMeasure</td>
            <td>
                <a href="@Url.Action("Edit", "Product", new { id = product.Id })">Edit</a> |
                <a href="@Url.Action("Delete", "Product", new { id = product.Id })">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Add New Product</a>