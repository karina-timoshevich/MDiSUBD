@model List<LabRab6_MDiSUBD_Timoshevich.Entities.Orders>

<h2>Your Orders</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Order Date</th>
        <th>Total Price</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td>@order.TotalPrice.ToString("C")</td>
            <td>@order.Status</td>
        </tr>
    }
    </tbody>
</table>