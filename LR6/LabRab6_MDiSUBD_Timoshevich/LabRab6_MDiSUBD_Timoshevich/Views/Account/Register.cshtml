@model LabRab6_MDiSUBD_Timoshevich.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div>
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" required />
    </div>
    <div>
        <label for="LastName">Last Name</label>
        <input type="text" id="LastName" name="LastName" value="@Model.LastName" required />
    </div>
    <div>
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Email" value="@Model.Email" required />
    </div>
    <div>
        <label for="DateOfBirth">Date of Birth</label>
        <input type="date" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required />
    </div>
    <div>
        <label for="PhoneNumber">Phone Number (optional)</label>
        <input type="text" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" />
    </div>

    <div>
        <label for="Password">Password</label>
        <input type="password" id="Password" name="Password" value="@Model.Password" required />
    </div>
    <div>
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" id="ConfirmPassword" name="ConfirmPassword" value="@Model.ConfirmPassword" required />
    </div>
    <div>
        <button type="submit">Register</button>
    </div>
</form>

@if(ViewBag.ErrorMessage != null)
{
    <div style="color: red;">
        <strong>@ViewBag.ErrorMessage</strong>
    </div>
}
